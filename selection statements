if ex:read two numbers and divide two numbers
program:
#include <stdio.h>
int main()
{
    int a,b;
    scanf("%d%d",&a,&b);
    if(b==0)
    {
        printf("second cannot be zero");
        b=1;
    }
int r=a/b;
printf("\n%d",r);
    return 0;
}

if else :
syntax:
if(condition)
{
\\statements
}
else
{
\\statement
}
ex1:read a number and print number is even or odd
program:
#include <stdio.h>
int main()
{
    int a;
    scanf("%d",&a);
    if(a%2==0)
    {
        printf("the number is even");
    }
    else
    {
        printf("the number is odd");
    }
    return 0;
}
ex2:
read a year and print year is leap year(divide by 4)
program:
#include <stdio.h>\\century year 
int main()
{
    int a;
    scanf("%d",&a);
    if((a%4==0)&&(a%100!=0))
    {
        printf("leap year");
    }
    else
    {
        printf("not a leap year");
    }
    return 0;
}
program:
#include <stdio.h>
int main()
{
    int a;
    scanf("%d",&a);
    if((a%4==0)&&(a%100!=0)||(a%400==0))
    {
        printf("leap year");
    }
    else
    {
        printf("not a leap year");
    }
    return 0;
}

EX3:read a character and print character is vowel or consonant
program:
#include <stdio.h>\\only for small letters
int main()
{
    char a;
    scanf("%c",&a);
    if((a=='a')||(a=='e')||(a=='i')||(a=='o')||(a=='u'))
    {
        printf("vowel");
    }
    else
    {
        printf("consonant");
    }
    return 0;
}
program:\\for both capital and small:
#include <stdio.h>
int main()
{
    char a;
    scanf("%c",&a);
    if((a=='a')||(a=='e')||(a=='i')||(a=='o')||(a=='u')||(a=='A')||(a=='E')||(a=='I')||(a=='O')||(a=='U'))
    {
        printf("vowel");
    }
    else
    {
        printf("consonant");
    }
    return 0;
}
EX4:find the roots of quadratic equation
formula=root1=(-b+sqrt(b*b-4*a*c))/(2*a);
        root2=(-b-sqrt(b*b-4*a*c))/(2*a);
for negative number there is no calculation for root
program:
#include <stdio.h>
#include<math.h>
int main()
{
    
    float a,b,c;
    scanf("%f%f%f",&a,&b,&c);
    float d=b*b-4*a*c;
    if(d<0)
    {
        printf("roots are not possible\n");
    }
    else
    {
        printf("roots are possible\n");
    }
    float root1=(-b+sqrt(b*b-4*a*c))/(2*a);
    float root2=(-b-sqrt(b*b-4*a*c))/(2*a);
    printf("root1=%f\nroot2=%f",root1,root2);
    return 0;
}


if else -if:
syntax:
if(condition:1)
{
      \\statement
}
else if(condition:2)
{
  \\statement
}
:
:
else if(condition:n)
{
\\statement
}
else
{
\\statement
}
EX1:smallest of three numbers
#include <stdio.h>
#include<math.h>
int main()
{
    
    int a,b,c;
    scanf("%d%d%d",&a,&b,&c);
    if(a<b && a<c)
    {
        printf("%d",a);
    }
    else if(b<c)
    {
        printf("%d",b);
    }
    else
    {
        printf("%d",c);
    }
    return 0;
}
EX2:read a number and printf number is +ve no or -ve no or zero
program:
#include <stdio.h>
#include<math.h>
int main()
{
     int a;
    scanf("%d",&a);
    if(a>0)
    {
        printf("%d is positive",a);
    }
    else if(a==0)
    {
        printf("%d is zero",a);
    }
    else
    {
        printf("%d is negative",a);
    }
    return 0;
}

nested if:
no syntax 
if condition internally having another if condition is called nested if
EX1:biggest of three numbers
#include <stdio.h>
#include<math.h>
int main()
{
    
    int a,b,c;
    scanf("%d%d%d",&a,&b,&c);
    if(a>b)
    {
        if(a>c)
        {
        printf("%d",a);
        }
        else
        {
        printf("%d",c);
        }
    }
        else if(b>c)
        {
        printf("%d",b);
         }
    else
    {
        printf("%d",c);
    }
}
switch:(multi decision statement)(menu driven)
>expression must be integer and character(based on precision)
>break is not mandatory without break statement it is called fallthrough statement
>default can be write anywhere in the program
syntax:
switch(expression)
{
  case constant1:
  statements;
  break;
  case constant2:
  statements;
  break;
  :
  :
  case constantn:
  statements;
  break;
  default:
  statement;
  break;
}
EX:read two numbers and print 1 for addition,2 for substraction ,3 for multiplication and 4 for division
program:
#include <stdio.h>
int main()
{
    
    int a,b;
    scanf("%d%d",&a,&b);
    int ch;
    scanf("%d",&ch);
    switch(ch)
    {
        case 1:
        printf("%d",a+b);
        break;
        
        case 2:
        printf("%d",a-b);
        break;
        
        case 3:
        printf("%d",a*b);
        break;
        
        case 4:
        printf("%d",a/b);
        break;
        
        default:
        printf("invalid choice");
        break;
        
    }
}

  

